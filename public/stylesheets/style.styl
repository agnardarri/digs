// POPUP STUFF ============
.mapboxgl-popup
  max-width 320px!important
.mapboxgl-popup-content
  padding 0!important
  // border 3px solid rgba(5, 5, 5, .05)
  border-radius 10px
  box-shadow none

.popup-wrapper
  @extends .flex-col
  align-items stretch
  border-radius 25px
  // opacity 75%

.popup-img-wrapper
  @extends .flex-col
  justify-content flex-end
  align-items flex-start
  h3,h4
    margin-left 1vw
  // background-image url('../images/popup_default.jpg')
  background-size 100% 100%
  background-repeat no-repeat
  background-position center
  width 12vw
  height 15vh
  border-top-left-radius 10px
  border-top-right-radius 10px
  // flex-basis 50%
  // flex 1 1 50%
  // height 10

.popup-desc-wrapper
  @extends .flex-col
  align-items stretch
  flex 1 1 50%
  padding 10px 10px 15px

.poplink
  border-top 1px solid rgba(0, 0, 0, 25%)
  padding-top 8px
  margin-bottom -10px
  font-style italic
  text-align center

.popup-attrs
  dl
    margin-bottom 0!important
  dt
    text-transform uppercase
    color grey
  dd
    margin-bottom 3px!important

.legend
  background-color rgba(#ffffff, 0.75)
  border-radius 3px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)
  font 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif
  padding 10px
  position absolute
  right 10px
  bottom 30px
  z-index: 1

.legend h4
  margin 0 0 10px

.legend div span
  border-radius 50%
  // border 1px solid black
  display inline-block
  height 10px
  margin-right 5px
  width 10px




.control-names, .control-filter
  font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif
  font-weight: 600
  position: absolute
  top: 10px
  z-index: 1
  border-radius: 3px
  width: 120px
  color: black

.control-names
  left: 10px

.control-filter
  right: 10px


.control-names, .control-filter input[type='checkbox']:first-child + label {
  border-radius: 3px 3px 0 0;
}

.control-names, .control-filter label:last-child {
  border-radius: 0 0 3px 3px;
  border: none;
}

.control-names, .control-filter input[type='checkbox'] {
  display: none;
}

.control-names, .control-filter input[type='checkbox'] + label {
  // background-color: rgba(#777777, 0.49);
  display: block;
  cursor: pointer;
  padding: 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.25);
}

.control-names, .control-filter input[type='checkbox'] + label {
  background-color: rgba(#ff8a70, 0.8);
  text-transform: capitalize;
}

.control-names, .control-filter input[type='checkbox'] + label:hover,
.control-names, .control-filter input[type='checkbox']:checked + label {
background-color: rgba(#ffffff, 0.8);
}

.control-names, .control-filter input[type='checkbox']:checked + label:before {
  content: 'âœ”';
  margin-right: 5px;
}


