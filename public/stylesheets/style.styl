  background-size cover
  background-repeat no-repeat
  background-position center

.quote
  @extends .flex-col
  background-image url('../images/DSC05226.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  height 50vh
  justify-content center
  align-items center
